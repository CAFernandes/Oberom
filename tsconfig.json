{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "strict": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@domain/*":["./src/domain/*"],
      "@errors/*":["./src/core/errors/*"],
      "@middlewares/*":["./src/core/middlewares/*"],
      "@services/*":["./src/core/services/*"],
      "@utils/*":["./src/core/utils/*"],
      "@base/*":["./src/infra/base/*"],
    }
  },
  "exclude": [
    "node_modules",
    "./src/test/*",
    "./docker/*",
    "./*.js",
    "*.js"
  ]
}
